#
# Usage:
#
# source=/file target=/newfile
#   Copy a file from a location on the remote machine to another location
#   on the remote machine.
#

import shutil

# ===========================================
# Module execution.
#

def main():
    module = AnsibleModule(
        argument_spec = dict(
            source=dict(required=True),
            target=dict(required=True)
        )
    )
    source = module.params["source"]
    target = module.params["target"]
    if source == target:
        module.fail_json(msg="source and target file cannot be the same")
    try:
        shutil.copy(source,target)
    except (IOError, os.error):
        module.fail_json(changed=False,msg="exception, copy failed")
    module.exit_json(changed=True,msg="copy successful")

# this is magic, see lib/ansible/module_common.py
#<<INCLUDE_ANSIBLE_MODULE_COMMON>>
main()
